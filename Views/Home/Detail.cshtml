<main>
    <div class="container">
        <div class="tieude">
            <p>Food Anh Tai -> Chi tiết sản phẩm -> @Model.TenMonAn</p>
        </div>
        <div class="chitiet text-center">
            <div class="row">
                <div class="col">
                    <img class="anh-face" src="~/image/monan/@Model.HinhAnh">
                </div>
                <div class="col-5">
                    <div class="thongtin">
                        <h2>@Model.TenMonAn</h2>
                        <h3>@Model.DonGia Đ</h3>
                        <h3><b>Danh Mục:</b>@Model.DanhMuc.TenDanhMuc </h3>
                        <p>Số lượng :</p>
                      <form asp-action="ThemCart" asp-controller="GioHang" asp-route-Id="@Model.MaMonAn">
                            <div class="input-group quantity mb-5" style="width: 100px;">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-minus rounded-circle bg-light border" type="button">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                                <input type="text" class="form-control form-control-sm text-center border-0" value="1" name="quantity">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-plus rounded-circle bg-light border" type="button">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <button class="btn border border-secondary rounded-pill px-4 py-2 mb-4 text-white"><i class="fa fa-shopping-bag me-2 text-primary text-white"></i> Thêm vào giỏ hàng</button>
                      </form>
                        <div class="mota">
                            <h4>Mô tả chi tiết</h4>
                            <div>
                                <p>@Model.TenMonAn</p>
                                <p>@Model.MoTa</p>
                               
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="danhmuckhac">
                        <h4>Danh mục khác</h4>
                        <div class="list-danhmuckhac   text-center" style="text-decoration:none;color:black;">
                            <p><h3><vc:danh-mucs></vc:danh-mucs></h3></p>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="danhgia">
            <div>
                <h4>Đánh giá Món ăn : @Model.TenMonAn</h4>
            </div>
            <div class="form-danhgia">
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Nhập đánh giá</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
                <div class="btn-danhgia">
                    <button>
                        <span>Đánh giá</span>
                    </button>
                </div>
            </div>
            <div class="danhgiakhac">
                <h5>Đánh giá nổi bật</h5>
                <div class="danhgianoibat">
                    <ul>
                        <li class="list-danhgia">
                            <img class="face-danhgia" src="https://media.dolenglish.vn/PUBLIC/MEDIA/2b2f1391-7dcd-4d41-b1eb-2273c8cd00de.jpg">
                        </li>
                        <li class="list-danhgia">
                            <h4 class="ngdanhgia">Anh Tài</h4>
                            <p class="ngdanhgia">Món ăn này rất ngon</p>
                        </li>
                    </ul>
                    <ul>
                        <li class="list-danhgia">
                            <img class="face-danhgia" src="https://media.dolenglish.vn/PUBLIC/MEDIA/2b2f1391-7dcd-4d41-b1eb-2273c8cd00de.jpg">
                        </li>
                        <li class="list-danhgia">
                            <h4 class="ngdanhgia">Thành Long</h4>
                            <p class="ngdanhgia">Món ăn tuyệt vời và ngọt</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>
