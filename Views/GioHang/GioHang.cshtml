@using WebDatMonAn.Models.ViewModel;
@model GioHangViewModel
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Hình ảnh</th>
                        <th scope="col">Tên</th>
                        <th scope="col">Gía bán</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Thành tiền</th>
                        <th scope="col">Hủy</th>
                    </tr>
                </thead>
                <tbody>
                     @if (Model.GioHangs.Count > 0)
                        {
                             
                           
                                @foreach (var item in Model.GioHangs)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="d-flex align-items-center">
                                        <img src="~/image/monan/@item.HinhAnh" class="img-fluid me-5 rounded-circle"
                                             style="width: 80px; height: 80px;" alt="">
                                    </div>
                                </th>
                                <td>
                                    <a asp-action="Detail"  asp-controller="Home" asp-route-Id="@item.MaMonAn" style="text-decoration:none; color:black;"><p class="mb-0 mt-4">@item.TenMonAn</p></a>
                                </td>
                                <td>
                                    <p class="mb-0 mt-4">@item.DonGia đ</p>
                                </td>
                                <td>
                                    <div class="input-group quantity " style="width: 100px;height:50px;">
                                        <div class="input-group-btn">
                                            <a asp-action="Decrease" asp-controller="GioHang" asp-route-Id="@item.MaMonAn">
                                                <button class="btn btn-sm btn-minus rounded-circle bg-light border">
                                                    <i class="fa fa-minus"></i>
                                                </button>
                                            </a>
                                            
                                        </div>
                                        <input type="text" class="form-control form-control-sm text-center border-0" value="@item.SoLuong" name="quantity">
                                        <div class="input-group-btn">
                                            <a asp-action="Increase" asp-controller="GioHang" asp-route-Id="@item.MaMonAn">
                                            <button class="btn btn-sm btn-plus rounded-circle bg-light border">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <p class="mb-0 mt-4">@item.ThanhTien</p>
                                </td>
                                <td>
                                   <a asp-action="Remove" asp-controller="GioHang" asp-route-Id="@item.MaMonAn">
                                        <button class="btn btn-md rounded-circle bg-light border mt-4">
                                        <i class="fa fa-times text-danger"></i>
                                    </button type="button">
                                   </a>
                                </td>

                            </tr>
                        }
                          <tr>
                                <td  class="text-end align-center" colspan="6"><a asp-action="XoaHet" asp-controller="GioHang" class="btn btn-danger">Xóa hết</a></td>

                               </tr>
                    }
                    else
                    {
                    <td colspan="6">
                        <h4>Không có món ăn nào trong giỏ hàng của bạn</h4>
                    </td>
                    }

                  
                </tbody>
            </table>
        </div>
        <div class="mt-5">
            <input type="text" class="border-0 border-bottom rounded me-5 py-3 mb-4" placeholder="nhập phiếu giảm giá">
            <button class="btn border-secondary rounded-pill px-4 py-3 text-primary" type="button">
                Phiếu giảm
                giá
            </button>
        </div>
        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4"><span class="fw-normal">Tổng số</span></h1>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Tổng tiền :</h5>
                            <p class="mb-0">@Model.TongTien đ</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h5 class="mb-0 me-4">Shipping</h5>
                            <div class="">
                                <p class="mb-0">0đ</p>
                            </div>
                        </div>

                    </div>
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4">Tổng tiền thanh toán</h5>
                        <p class="mb-0 pe-4">@Model.TongTien đ</p>
                    </div>
                    <button class="btn border-secondary rounded-pill px-4 py-3 text-primary text-white mb-4 ms-4"
                            type="button">
                        Thanh toán
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>